{
  "name": "Minimal Weekly Todo",
  "version": "1.5",
  "description": "요일별 할 일을 관리하고, 아이콘 및 요일 옆에 미완료 배지를 표시합니다.",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}